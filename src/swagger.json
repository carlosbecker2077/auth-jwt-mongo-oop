		"/login": {
			"post": {
				"summary": "Log in",
				"description": "This route is used for user login",
				"tags": ["Login"],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/Login"
							},
							"examples": {
								"User": {
									"value": {
										"email": "John Marine",
										"password": ""
									}
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"$ref": "#/components/schemas/Login"
								}
							}
						}
					},
					"500": {
						"description": "Error",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"$ref": "#/components/schemas/Login"
								}
							}
						}
					}
				}
			}
		},
